<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
	<entity name="Indigo\Service\Entity\Comment" table="service_comments">
		<id name="id" type="integer" column="id">
			<generator strategy="AUTO"/>
		</id>

		<field name="comment" type="text" nullable="true" />
		<field name="internal" type="boolean">
			<options>
				<option name="default">0</option>
			</options>
		</field>
		<field name="createdAt" type="datetime" />

		<many-to-one field="service" target-entity="Indigo\Service\Entity\Service" inversed-by="comments"></many-to-one>
		<many-to-one field="author" target-entity="Indigo\Service\Entity\User"></many-to-one>
	</entity>
</doctrine-mapping>
